--
-- For more information on build.settings see the Corona SDK Build Guide at:
-- https://docs.coronalabs.com/guide/distribution/buildSettings
--

settings =
{
	orientation =
	{
		-- Supported values for orientation:
		-- portrait, portraitUpsideDown, landscapeLeft, landscapeRight

		default = "landscapeLeft",
		supported = { "portrait", "portraitUpsideDown", "landscapeLeft", "landscapeRight"},
	},
	
	excludeFiles =
	{
		-- Include only the necessary icon files on each platform
		iphone = { "res/Icon-*dpi.png", },
		android = { "res/Icon.png", "res/Icon-Small-*.png", "res/Icon*@2x.png", },
	},

	--
	-- iOS Section
	--
	iphone =
	{
		plist =
		{
			UIStatusBarHidden = false,
			UIPrerenderedIcon = true, -- set to false for "shine" overlay
			--UIApplicationExitsOnSuspend = true, -- uncomment to quit app on suspend

			CFBundleIconFiles =
			{
				"res/Icon.png",
				"res/Icon@2x.png",
				"res/Icon-167.png",
				"res/Icon-60.png",
				"res/Icon-60@2x.png",
				"res/Icon-60@3x.png",
				"res/Icon-72.png",
				"res/Icon-72@2x.png",
				"res/Icon-76.png",
				"res/Icon-76@2x.png",
				"res/Icon-Small.png",
				"res/Icon-Small@2x.png",
				"res/Icon-Small@3x.png",
				"res/Icon-Small-40.png",
				"res/Icon-Small-40@2x.png",
				"res/Icon-Small-50.png",
				"res/Icon-Small-50@2x.png",
			},
		},
	},
	
	--
	-- Android Section
	--
	android =
	{
		usesPermissions =
		{
			"android.permission.INTERNET",
		},
	},
}
